@model NewsPortal.Web.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="mt-5">Register</h2>
<div class="container-fluid mt-5">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true);
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "" })
                @Html.TextBoxFor(model => model.Email, new { type = "email", @class = "form-control", placeholder = "Enter email" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "" })
                @Html.PasswordFor(model => model.Password, new { type = "password", @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "" })
                @Html.PasswordFor(model => model.ConfirmPassword, new { type = "password", @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Sign in" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
